<button class="refresh-btn" @onclick="OnRefresh">
    <svg viewBox="0 0 24 24" class="icon">
        <path d="M17.65 6.35A7.95 7.95 0 0 0 12 4V1L7 6l5 5V7c2.76
                 0 5 2.24 5 5a5 5 0 0 1-9.9 1h-2.02A7 7 0 1 0 17.65 6.35z" />
    </svg>
    <span>تحديث</span>
</button>

<style>
    .refresh-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: #1d4ed8; /* أزرق */
        color: #fff;
        border: none;
        padding: 0.6rem 1.2rem;
        font-size: 0.95rem;
        font-weight: 600;
        border-radius: 10px;
        cursor: pointer;
        transition: background 0.2s ease, transform 0.15s ease;
        box-shadow: 0 4px 10px rgba(0,0,0,0.15);
    }

        .refresh-btn:hover {
            background: #2563eb;
            transform: translateY(-2px);
        }

        .refresh-btn:active {
            background: #1e40af;
            transform: scale(0.97);
        }

        .refresh-btn .icon {
            width: 20px;
            height: 20px;
            fill: currentColor;
        }
</style>

@code {
    private void OnRefresh()
    {
        // من هون بتعمل أي ريكويست أو إعادة تحميل البيانات
        Console.WriteLine("Refresh clicked!");
    }
}
